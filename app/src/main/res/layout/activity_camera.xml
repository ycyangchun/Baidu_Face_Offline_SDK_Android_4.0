<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.idl.face.demo.view.CameraSurfaceView
        android:id="@+id/auto_camera_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_live_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="活体分值：0.0"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/btn_save_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采集图片" />

    <ImageView
        android:id="@+id/origin_img"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/trans_img"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/origin_img"
        android:layout_alignParentRight="true" />
</RelativeLayout>