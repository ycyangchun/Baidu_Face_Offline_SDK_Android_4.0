<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detect_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/red" />

    // 人脸检测耗时

    <TextView
        android:id="@+id/detect_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="检测耗时："
        android:textColor="@color/red" />

    // RGB 活体耗时：

    <TextView
        android:id="@+id/live_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="RGB活体耗时："
        android:textColor="@color/red" />

    // RGB 活体得分：

    <TextView
        android:id="@+id/live_score_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="RGB 活体得分："
        android:textColor="@color/red" />

    // 双目活体耗时：

    <TextView
        android:id="@+id/binocular_live_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/red" />

    // 双目 活体得分：

    <TextView
        android:id="@+id/binocular_score_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/red" />

    // 特征抽取耗时：

    <TextView
        android:id="@+id/feature_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/red" />

</LinearLayout>