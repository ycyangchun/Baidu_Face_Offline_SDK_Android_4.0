<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/negativeButton"
        android:layout_width="1dip"
        android:layout_height="@dimen/button_height_dlg"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="cancel"
        android:textColor="@drawable/xml_btn_textcolor_btn02"
        android:textSize="@dimen/ts_16" />

    <TextView
        android:id="@+id/lloff"
        android:layout_width="@dimen/padding_05"
        android:layout_height="@dimen/button_height_dlg"
        android:background="@color/c_e6e6e6" />

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="1dip"
        android:layout_height="@dimen/button_height_dlg"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="ok"
        android:textColor="@drawable/xml_btn_textcolor_btn01"
        android:textSize="@dimen/ts_16" />
</LinearLayout>


