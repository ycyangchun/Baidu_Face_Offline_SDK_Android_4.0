<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/bg_dialog_r9"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_05"
            android:background="@color/c_e6e6e6"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-22dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/custom_dialog_title"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmessage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:minHeight="90dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="18.0dip"
            android:paddingRight="18.0dip"
            android:paddingTop="32dip">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:scrollbars="vertical"
                android:text="恭喜您登录成功"
                android:textColor="@color/c_202020"
                android:textSize="@dimen/ts_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/touchid_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kj_icon_touchid" />

            <TextView
                android:id="@+id/touchid_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_marginTop="@dimen/padding_15"
                android:gravity="center"
                android:textColor="@color/c_202020"
                android:textSize="@dimen/ts_16" />

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_05"
            android:background="@color/c_e6e6e6" />

        <include layout="@layout/custom_dialog_btn"></include>
    </LinearLayout>

</LinearLayout>