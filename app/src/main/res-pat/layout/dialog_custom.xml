<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_r9"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_05"
            android:background="@color/c_e6e6e6"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-22dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/custom_dialog_title"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:minHeight="90dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollbars="vertical"
                android:text="恭喜您登录成功"
                android:textColor="@color/c_202020"
                android:textSize="@dimen/ts_16"
                android:paddingBottom="25dp"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:paddingTop="25dip"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_05"
                android:background="@color/c_e6e6e6" />

            <include layout="@layout/custom_dialog_btn"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>